- if @next_game
  %h2#next_game_title= t('.title')

  #next_game_countdown
    = image_tag 'current_game.png', id: 'game_indicator'
    #countdown{ data: { days: t('.days'), hours: t('.hours'), minutes: t('.minutes'), seconds: t('.seconds'), timestamp: l(@next_game.start_at.utc, format: :countdown), timezone: 0 } }